nav#navbar.navbar.navbar-default.navbar-fixed-top
    .container-fluid
        .navbar-header
            button.ripple.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#navbar-content" aria-expanded="false" aria-controls="navbar-content")
                span.glyphicon.glyphicon-th-large
                |   Menu
            span#menu-toggle.btn.btn-primary.btn-lg.glyphicon.glyphicon-list(aria-hidden="true",  href="#menu-toggle")
        #navbar-content.navbar-collapse.collapse
            form.navbar-form.navbar-right(action="/", method="GET")
                .form-group
                    input.form-control(type="text", name="q", placeholder="Search")
                button.btn.btn-info.ripple(type="submit") 
                    span.glyphicon.glyphicon-search
                    |   &nbsp;Zoeken
            .navbar-right
                a.ml-3(type="button", href="/")
                    .navbar-btn.btn.btn-info.ripple.nav-margin
                        span.glyphicon.glyphicon-home
                        |   &nbsp;Home
                a(type="button", href="/about")
                    .navbar-btn.btn.btn-info.ripple.nav-margin
                        span.glyphicon.glyphicon-book
                        |   &nbsp;Info
                a(type="button", href="/contact")
                    .navbar-btn.btn.btn-info.ripple.nav-margin
                        span.glyphicon.glyphicon-user
                        |   &nbsp;Contact
                if (user)
                    a(type="button", href="/auth/logout")
                        .navbar-btn.btn.btn-info.ripple.nav-margin
                            span.glyphicon.glyphicon-log-out
                            |   &nbsp;Uit-Loggen
                    a(type="button", href="/checkout")
                        .navbar-btn.btn.btn-info.nav-margin
                            span.glyphicon.glyphicon-shopping-cart
                            .badge#shopCartAmount
                else 
                    a(type="button", href="/auth/login")
                        .navbar-btn.btn.btn-info.ripple.nav-margin
                            span.glyphicon.glyphicon-log-in
                            |   &nbsp;In-Loggen